<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Parents -->

    <style name="CabinetParent" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="title_text">@android:color/black</item>
        <item name="body_text">#303030</item>
        <item name="list_background">@null</item>
        <item name="drawer_background">@color/drawer_background</item>
        <item name="divider">@color/divider</item>
        <item name="overflow">@drawable/ic_overflow_dark</item>
        <item name="folder_thumbnail">@drawable/ic_folder</item>
        <item name="menu_selector">@drawable/menu_selector</item>
        <item name="list_selector">@drawable/list_selector</item>
        <item name="list_selector_lighter">@drawable/list_selector_lighter</item>
        <item name="empty_image">@drawable/ic_empty_image</item>
        <item name="empty_image_error">@drawable/ic_empty_error</item>
        <item name="empty_text">#99000000</item>

        <!-- Theming -->
        <item name="android:buttonStyle">@style/ButtonCabinet</item>
        <item name="android:editTextBackground">@drawable/cabinet_edit_text_holo_light</item>
        <item name="android:checkboxStyle">@style/CheckBoxCabinet</item>
        <item name="android:radioButtonStyle">@style/RadioButtonCabinet</item>
        <item name="android:textColorHighlight">#9957687c</item>
        <item name="android:textSelectHandleLeft">@drawable/cabinet_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/cabinet_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/cabinet_text_select_handle_middle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_close</item>
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">
            @android:style/Widget.Holo.Light.ListView.DropDown
        </item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Cabinet</item>
        <item name="android:actionModeBackground">@drawable/ab_solid_cabinet</item>
        <item name="android:actionModeSplitBackground">@drawable/ab_solid_cabinet</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Cabinet.Widget</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowRecoup</item>
        <item name="android:actionMenuTextColor">#000</item>
        <item name="android:dialogTheme">@android:style/Theme.Holo.Light.Dialog</item>
    </style>

    <style name="CabinetDarkParent" parent="@android:style/Theme.Holo">
        <item name="title_text">@android:color/white</item>
        <item name="body_text">#EEEEEE</item>
        <item name="list_background">#242424</item>
        <item name="drawer_background">@color/drawer_background_dark</item>
        <item name="divider">@color/divider_dark</item>
        <item name="overflow">@drawable/ic_overflow</item>
        <item name="folder_thumbnail">@drawable/ic_folder_light</item>
        <item name="menu_selector">@drawable/menu_selector_dark</item>
        <item name="list_selector">@drawable/list_selector_dark</item>
        <item name="list_selector_lighter">@drawable/list_selector_lighter_dark</item>
        <item name="empty_image">@drawable/ic_empty_image_light</item>
        <item name="empty_image_error">@drawable/ic_empty_error_light</item>
        <item name="empty_text">#99FFFFFF</item>

        <!-- Theming -->
        <item name="android:buttonStyle">@style/ButtonCabinetDark</item>
        <item name="android:editTextBackground">@drawable/cabinet_edit_text_holo_light</item>
        <item name="android:checkboxStyle">@style/CheckBoxCabinet</item>
        <item name="android:radioButtonStyle">@style/RadioButtonCabinet</item>
        <item name="android:textColorHighlight">#9957687c</item>
        <item name="android:textSelectHandleLeft">@drawable/cabinet_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/cabinet_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/cabinet_text_select_handle_middle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_close</item>
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">
            @android:style/Widget.Holo.Light.ListView.DropDown
        </item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Cabinet</item>
        <item name="android:actionModeBackground">@drawable/ab_solid_cabinet</item>
        <item name="android:actionModeSplitBackground">@drawable/ab_solid_cabinet</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Cabinet.Widget</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowRecoup</item>
        <item name="android:actionMenuTextColor">#fff</item>
        <item name="android:dialogTheme">@android:style/Theme.Holo.Light.Dialog</item>
    </style>

</resources>