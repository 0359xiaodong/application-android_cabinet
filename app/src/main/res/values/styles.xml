<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Cabinet" parent="@style/CabinetParent" />

    <style name="Theme.CabinetStatusTranslucent" parent="@style/Theme.Cabinet" />

    <style name="Theme.CabinetNavTranslucent" parent="@style/Theme.Cabinet" />

    <style name="Theme.CabinetNavStatusTranslucent" parent="@style/Theme.Cabinet" />


    <style name="Theme.CabinetDark" parent="@style/CabinetDarkParent" />

    <style name="Theme.CabinetDarkStatusTranslucent" parent="@style/Theme.CabinetDark" />

    <style name="Theme.CabinetDarkNavTranslucent" parent="@style/Theme.CabinetDark" />

    <style name="Theme.CabinetDarkNavStatusTranslucent" parent="@style/Theme.CabinetDark" />


    <style name="OverflowRecoup" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="ButtonCabinet" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/rect_button_selector</item>
        <item name="android:textColor">#fff</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="ButtonCabinetDark" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/rect_button_selector_dark</item>
        <item name="android:textColor">#fff</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="CheckBoxCabinet" parent="android:Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cabinet_btn_check_holo_light</item>
    </style>

    <style name="RadioButtonCabinet" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:button">@drawable/cabinet_btn_radio_holo_light</item>
    </style>

    <style name="ActionBar.Solid.Cabinet" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@drawable/ab_solid_cabinet</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Cabinet.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">@color/search_view_hint</item>
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="android:textColor">?title_text</item>
        <item name="android:checkboxStyle">@style/CheckBoxCabinet</item>
        <item name="android:radioButtonStyle">@style/RadioButtonCabinet</item>
    </style>

    <style name="Theme.PopupMenu" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listDivider">@null</item>
    </style>

</resources>